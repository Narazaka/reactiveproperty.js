{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "declaration": true,
      "lib": [
        "es2015",
        "dom"
      ],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noImplicitUseStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist/es5",
      "preserveConstEnums": true,
      "sourceMap": true,
      "strictNullChecks": true
  },
  "include": [
    "src"
  ]
}
